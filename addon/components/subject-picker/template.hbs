{{#if (not isOpen)}}
    {{#if disciplineReduced}}
    <div class="row">
        <div class="col-xs-12">
            {{#each disciplineReduced as |subject|}}
                <span class="subject-preview">{{subject.text}}</span>
            {{/each}}
        </div>
    </div>
    {{/if}}
{{/if}}

{{#preprint-form-body}}
    {{#if isOpen}}
    <div class="row">
        {{#each selected as |subject|}}
            <span class="subject">
                {{#each subject as |segment|}}
                    <b>{{segment.text}}</b>
                {{/each}}
                {{fa-icon 'times' click=(action 'deselect' subject)}}
            </span>
        {{/each}}
    </div>

    <div class="row">

        <div class="col-md-4">
            <ul style="overflow: scroll">
                {{input value=tier1FilterText class="form-control" placeholder="Search"}}
                {{#each tier1Sorted as |subject|}}
                    <li {{action 'select' subject '1'}} class={{if (eq subject selection1) 'selected'}}>
                        {{subject.text}}
                    </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <ul style="overflow: scroll">
                {{input value=tier2FilterText class="form-control" placeholder="Search"}}
                {{#each tier2Sorted as |subject|}}
                    <li {{action 'select' subject '2'}} class={{if (eq subject selection2) 'selected'}}>
                        {{subject.text}}
                    </li>
                {{/each}}
            </ul>
        </div>

        <div class="col-md-4">
            <ul style="overflow: scroll">
                {{input value=tier3FilterText class="form-control" placeholder="Search"}}
                {{#each tier3Sorted as |subject|}}
                    <li {{action 'select' subject '3'}} class={{if (eq subject selection3) 'selected'}}>
                        {{subject.text}}
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
      <div class="col-md-12">
          <div class="pull-right">
              <button {{action 'discardSubjects'}} class="btn btn-default" disabled={{unless disciplineChanged true}}>Discard</button>
              <button {{action 'saveSubjects'}} class="btn btn-primary" disabled={{unless disciplineValid true}} >Save and Continue</button>
          </div>
      </div>
    </div>
    {{/if}}
{{/preprint-form-body}}
